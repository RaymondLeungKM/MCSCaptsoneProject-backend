# Database
DATABASE_URL=postgresql://user:password@localhost:5432/preschool_vocab
ASYNC_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/preschool_vocab

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/LLM Configuration
# Available providers: "openai", "anthropic", "ollama"
# Default is "ollama" for local testing without API costs
LLM_PROVIDER=ollama

# OpenAI (for GPT-4 powered features)
OPENAI_API_KEY=sk-your-openai-key

# Anthropic Claude (for Claude-powered features)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Ollama (for local LLM testing - free!)
# Make sure Ollama is installed and running: https://ollama.ai/
# Start server: ollama serve
# Pull model: ollama pull qwen3:4b
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:4b

# AWS S3 (for media storage)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET_NAME=preschool-vocab-media
AWS_REGION=us-east-1

# Environment
ENVIRONMENT=development
DEBUG=true
