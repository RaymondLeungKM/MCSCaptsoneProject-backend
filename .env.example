# Database
DATABASE_URL=postgresql://user:password@localhost:5432/preschool_vocab
ASYNC_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/preschool_vocab

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================================================
# AI/LLM Configuration
# ==============================================================================
# Available providers: "openai", "anthropic", "ollama"
# Default is "ollama" for local testing without API costs
LLM_PROVIDER=ollama

# OpenAI (for GPT-4 powered features)
OPENAI_API_KEY=sk-your-openai-key

# Anthropic Claude (for Claude-powered features)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ==============================================================================
# Ollama Configuration (Local LLM - Free!)
# ==============================================================================
# Installation: https://ollama.ai/
# Start server: ollama serve
# Pull the model you want to use (see options below)

OLLAMA_BASE_URL=http://localhost:11434
# Change the model here - just update this line and pull the model!
OLLAMA_MODEL=qwen2.5:1.5b

# Available Ollama Models:
# - qwen2.5:1.5b  (Recommended for fast testing, ~1GB, best Cantonese support)
# - qwen3:4b      (Good quality, ~2.6GB, excellent Cantonese)
# - qwen2.5:7b    (High quality, ~4.7GB, excellent Cantonese)
# - qwen2.5:14b   (Production quality, ~9GB, excellent Cantonese)
# - llama3.1:8b   (Alternative, ~4.7GB, decent but weaker Chinese)
#
# To switch models:
# 1. Update OLLAMA_MODEL above to your chosen model
# 2. Pull the model: ollama pull qwen2.5:1.5b
# 3. Restart your backend server
#
# The qwen2.5 models are optimized for Chinese/Cantonese content!

# AWS S3 (for media storage)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET_NAME=preschool-vocab-media
AWS_REGION=us-east-1

# Environment
ENVIRONMENT=development
DEBUG=true
